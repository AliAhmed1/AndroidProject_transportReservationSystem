<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobview"
    tools:context=".getreservationactivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserve Now"
        android:layout_marginTop="110dp"
        android:textSize="40dp"
        android:textColor="#000105"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Area :"
        android:textColor="#000105"
        android:textSize="28sp"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="20dp"

        ></TextView>
    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Select City :"
        android:textColor="#000105"
        android:textSize="28sp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="20dp"
       />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. of Reservations"
        android:textColor="#000105"
        android:textSize="20sp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Time :"
        android:textColor="#000105"
        android:textSize="28sp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000105"
        android:textSize="28sp"
      android:layout_marginLeft="250dp"
        android:layout_marginTop="200dp"/>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="480dp"
        android:text="Total Amount"

        android:textColor="#000105"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:background="@drawable/styling"
        android:text="Reserve"
        tools:layout_editor_absoluteY="627dp"
        android:gravity="center"
        android:layout_below="@id/Feeamount"
        android:layout_marginTop="40dp"
        android:onClick="reserved"/>

    <Spinner
        android:id="@+id/cityspinnerdefault"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:spinnerMode="dropdown"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="270dp"
         />

    <Spinner
        android:id="@+id/areaspinnerdefault"
        android:layout_width="198dp"
        android:layout_height="38dp"
        android:contentDescription="Area"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="340dp"/>

    <TextView
        android:id="@+id/Feeamount"
        android:layout_width="146dp"
        android:layout_height="41dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="480dp"/>

    <Spinner
        android:id="@+id/reservationstext"
        android:layout_width="146dp"
        android:layout_height="47dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="410dp"
        android:layout_alignLeft="@+id/textView22"/>

</RelativeLayout>