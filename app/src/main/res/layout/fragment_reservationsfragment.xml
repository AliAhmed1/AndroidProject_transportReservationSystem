<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reservationsfragment"
    android:background="@android:color/background_light"
    android:backgroundTint="@android:color/transparent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView242"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:text="My Reservations"
            android:textColor="#070707"
            android:textSize="30dp" />




        <Button
            android:id="@+id/gotoreserve"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="470dp"
            android:background="@drawable/styling"
            android:layout_marginLeft="20dp"

            android:text="Get Reservation" />
        <Button
            android:id="@+id/viewreserve"
            android:layout_width="180dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="470dp"
            android:background="@drawable/styling"
       android:text="View Reservation" />

    </RelativeLayout>
</FrameLayout>